extends layout

block account
	.account
		.form
			h2 Login
			form(method='post', action='/login')
				p
					label(for='usr')
						| Username: 
						input(name='usr').usr
				p
					label(for='pwd')
						| Password: 
						input(type='password', name='pwd').pwd
				button(type='submit') Login
		.form
			h2 Register
			form(method='post', action='/register')
				p
					label(for='usr')
						| Username: 
						input(name='usr').usr
				p
					label(for='pwd')
						| Password: 
						input(type='password', name='pwd').pwd
				button(type='submit') Register

block content
	.menu
		.logo
			p Placeholder Logo
		h1 Welcome to #{title}
		.items
			p Placeholder
	.wrapper
		if vars.user
			p You are logged in as #{vars.user}
			form(method='get', action='/logout')
				button(type='submit') Logout
		else
			block account
		h2 Upload
		form(enctype='multipart/form-data', method='post', action='/upload')
			button(type='submit') Upload
			label(for='img')
				input(type='file', name='img').img
		p Outside form
		if vars.img
			img(src=vars.img.path) 
		if vars.buffer
			img(src='data:image/png;base64,#{vars.buffer}')
		if vars.err
			p= vars.err

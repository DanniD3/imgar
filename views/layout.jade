doctype html
html(lang='is')
	head
		title= title
		link(rel='stylesheet', href=cssSrc)
		script(text='javascript', src=jsSrc)
	body
		.menu
			.logo
				p Placeholder Logo
			h1 Welcome to #{title}
			.items
				p Placeholder
		.wrapper
			if vars.user
				p You are logged in as #{vars.user}
				form(method='get', action='/logout')
					button(type='submit') Logout
			else
				.account
					.form
						h2 Login
						form(method='post', action='/login')
							p
								label(for='usr')
									| Username: 
									input(name='usr').usr
							p
								label(for='pwd')
									| Password: 
									input(type='password', name='pwd').pwd
							button(type='submit') Login
					.form
						h2 Register
						form(method='post', action='/register')
							p
								label(for='usr')
									| Username: 
									input(name='usr').usr
							p
								label(for='pwd')
									| Password: 
									input(type='password', name='pwd').pwd
							button(type='submit') Register
			block content